{
  "server": {
    "port": 3449
  },
  "logging": {
    "accessLogs": {
      "filename": "access.log",
      "config": {
        "interval": "1d",
        "path": "logs"
      }
    },
    "appLogs": {
      "file": {
        "filename": "logs/nodejs-playground-",
        "handleExceptions": true,
        "json": true,
        "colorize": false,
        "datePattern": "yyyy-MM-dd.log"
      },
      "console": {
        "handleExceptions": true,
        "json": false,
        "colorize": true
      }
    }
  },
  "app": {
    // app config
  },
  "database": {
    "connection": {
      "dialect": "mssql",
      "timezone": "",
      "dialectOptions": {
        "requestTimeout": 60000
      },
      "pool": {
        "max": 5,
        "min": 0,
        "idle": 10000
      }
    }
  }
}